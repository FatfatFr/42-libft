CC: clang

CFLAGS:
-Wall -Wextra -Werror

NAME: libft.a
clang $(SRC) -o main

SRC = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_strlen.c
ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c ft_strlcpy.c ft_strlcat.c ft_toupper.c
ft_tolower.c ft_strchr.c ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c ft_strnstr.c ft_atoi.c

all: $(NAME)
$(NAME):
	clang -o $(NAME) $(SRC)
clean:
# efface tous les .o mais garde l4executable

fclean: clean
# efface aussi l'executable

re: fclean all


#exmple makefile
NAME = libft.a
 SRC = ft_isalpha.c ft_isdigit.c ft_isalnum.c ft_isascii.c ft_isprint.c ft_strlen.c ft_memset.c ft_bzero.c ft_memcpy.c ft_memmove.c ft_strlcpy.c ft_strlcat.c ft_toupper.c ft_tolower.c ft_strchr.c ft_strrchr.c ft_strncmp.c ft_memchr.c ft_memcmp.c ft_strnstr.c ft_atoi.c ft_calloc.c ft_strdup.c
 OBJ = ${SRC:.c=.o}
 all: $(NAME)
     ar -rc $(NAME) $(OBJ)
 $(NAME):
     gcc -Wall -Wextra -Werror -c $(SRC)
 clean:
     rm -f $(OBJ)
 fclean: clean
     rm -f $(NAME)
 re: fclean all